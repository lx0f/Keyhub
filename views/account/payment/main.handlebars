<main class="container grid my-5">
    <div class="row">
        <div class="col-md-3">
            {{>_account_aside}}
        </div>
        <div class="col-md-9 grid ">
            <div class="row mb-3">
                <div class="col">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">My Payment Methods</h5>
                            View and manage your payment methods
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-title">
                                {{#unless paymentMethods}}
                                <div class="">No Payment Methods</div>
                                {{/unless}}
                                <a href="/account/payment/add" class="btn btn-primary">Add Payment Method</a>
                            </div>
                            {{#if paymentMethods}}
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Holder</th>
                                        <th>Number</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each paymentMethods}}
                                    <tr>
                                        <td>{{this.holderName}}</td>
                                        <td>{{this.cardNumber}}</td>
                                        <form action="/account/payment/{{this.id}}/?_method=DELETE" method="post">
                                            <td><button class="btn btn-danger" type="submit"><i
                                                        class="fa fa-trash"></i></button></td>
                                        </form>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>