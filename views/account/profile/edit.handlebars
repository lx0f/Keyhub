<main class="container grid my-5">
    <div class="row">
        <div class="col-md-3">
            {{>_account_aside}}
        </div>
        <div class="col-md-9">
            <div class="card">
                <div class="card-body">
                    <form action="/login" method="POST" enctype="multipart/form-data">
                        <div class="form-group mb-3">
                            <label for="image">Profile picture</label>
                            <input type="file" name="image" id="profile">
                        </div>
                        <hr>
                        <div class="form-group mb-3">
                            <label for="username" class="form-label">Username</label>
                            {{#equals user.authMethod 'oauth'}}
                            <input name="username" class="form-control" value="{{user.username}}" type="text" disabled>
                            {{/equals}}
                            {{#equals user.authMethod 'local'}}
                            <input name="username" class="form-control" value="{{user.username}}" type="text">
                            {{/equals}}
                        </div>
                        <div class="form-group mb-3">
                            <label for="email" class="form-label">Email</label>
                            {{#equals user.authMethod 'oauth'}}
                            <input name="email" class="form-control" value="{{user.email}}" type="text" disabled>
                            {{/equals}}
                            {{#equals user.authMethod 'local'}}
                            <input name="email" class="form-control" value="{{user.email}}" type="text">
                            {{/equals}}
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-dark btn-block w-100">Save changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>