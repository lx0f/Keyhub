<main class="my-3">
    <div class="card mx-auto mb-3" style="max-width: 380px;">
        <div class="card-body">
            <h4 class="card-title mb-4">Register</h4>
            <form action="/register" method="POST">
                <a href="/google" class="btn btn-danger w-100"> <i class="fab fa-google"></i> &nbsp Sign
                    in with Google</a>
                <hr>
                <div class="form-group mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input name="username" class="form-control" type="text">
                </div>
                <div class="form-group mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input name="email" class="form-control" type="text">
                </div>
                <div class="form-group mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" class="form-control" type="password">
                </div>
                <div class="form-group mb-3">
                    <label for="password" class="form-label">Repeat Password</label>
                    <input name="repeatPassword" class="form-control" type="password">
                </div>
                <div class="form-group mb-3">
                    <div class="form-check">
                        <label class="form-check-label" for="remember">
                            I accept the <a href="#">terms and conditions</a>
                        </label>
                        <input class="form-check-input" type="checkbox" name="remember" required>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-dark btn-block w-100">Register</button>
                </div>

            </form>
        </div>
    </div>
    <p class="text-center">Already have an account? <a href="/login">Login</a></p>
</main>