<main class="my-3">
    <div class="card mx-auto mb-3" style="max-width: 380px;">
        <div class="card-body">
            <h4 class="card-title mb-4">Sign in</h4>
            <form action="/login" method="POST">
                <a href="/google" class="btn btn-danger w-100"> <i class="fab fa-google"></i> &nbsp Sign
                    in with Google</a>
                <hr>
                <div class="form-group mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input name="email" class="form-control" type="text">
                </div>
                <div class="form-group mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" class="form-control" type="password">
                </div>
                <div class="form-group mb-3">
                    <a href="/reset-password" class="float-right">Forgot password?</a>
                </div>
                <div class="form-group mb-3">
                    <div class="form-check">
                        <label class="form-check-label" for="remember">
                            Remember me
                        </label>
                        <input class="form-check-input" type="checkbox" name="remember">
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-dark btn-block w-100">Login</button>
                </div>
            </form>
        </div>
    </div>
    <p class="text-center">Don't have account? <a href="/register">Sign up</a></p>
</main>